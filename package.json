{
  "name": "sombras-de-morrowind",
  "version": "1.0.0",
  "description": "Un juego de mesa digital cooperativo inspirado en el universo de The Elder Scrolls III: Morrowind",
  "main": "dist/main.js",
  "author": "FedericoMuntaabski",
  "license": "MIT",
  "homepage": ".",
  "scripts": {
    "dev:testing": "node scripts/start-testing.js",
    "testing": "node scripts/start-testing.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest src/test/multiplayer.integration.test.ts",
    "build:main": "webpack --config webpack.main.config.js --mode development",
    "build:server": "tsc -p tsconfig.server.json",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:prod": "npm run build:main && npm run build:server && npm run build:renderer",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "start": "electron dist/main.js",
    "host": "npm run build:server && node dist/server/multiplayer-server.js",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "package": "npm run build:prod && electron-builder"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "assert": "^2.1.0",
    "dotenv": "^17.2.1",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "events": "^3.3.0",
    "express": "^4.21.2",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "phaser": "^3.70.0",
    "querystring-es3": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "stream-http": "^3.2.0",
    "url": "^0.11.4",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.6.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.4",
    "@types/ws": "^8.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.8.1",
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "global": "^4.4.0",
    "helmet": "^8.1.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "path-browserify": "^1.0.1",
    "prettier": "^3.0.3",
    "process": "^0.11.10",
    "rimraf": "^6.0.1",
    "sass": "^1.67.0",
    "sass-loader": "^13.3.2",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "util": "^0.12.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.federicomuntaabski.sombras-de-morrowind",
    "productName": "Sombras de Morrowind",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
